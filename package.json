  },
  "homepage": "https://github.com/ubuntudesign/cloud-init#readme",
  "dependencies": {
    "browser-sync": "^2.11.1",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-sass": "^2.1.1",
    "gulp-sourcemaps": "*",
    "npm": "*",
    "vanilla-framework": "0.0.71"
  },
  "devDependencies": {
    "gulp-gh-pages": "^0.5.4",
