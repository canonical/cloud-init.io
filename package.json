{
  "scripts": {
    "build": "yarn run build-css && yarn run build-js",
    "build-css": "sass static/sass/main.scss static/css/main.css --load-path=node_modules --style=compressed && postcss --no-map --use autoprefixer --replace 'static/css/**/*.css'",
    "build-js": "yarn run build-global-nav && yarn run build-cookie-policy",
    "build-global-nav": "mkdir -p static/js/modules && cp node_modules/@canonical/global-nav/dist/global-nav.js static/js/modules/global-nav.js",
    "build-cookie-policy": "mkdir -p static/js/modules && cp node_modules/@canonical/cookie-policy/build/js/cookie-policy.js static/js/modules/cookie-policy.js",
    "watch-css": "watch -p 'static/sass/**/*.scss' -c 'yarn run build-css'",
    "watch-js": "watch -p 'node_modules/@canonical/global-nav/dist/global-nav.js' -c 'yarn run build-js'",
    "watch": "concurrently --kill-others --raw 'yarn run watch-css' 'yarn run watch-js'",
    "serve": "./entrypoint 0.0.0.0:${PORT}",
    "start": "yarn run build && concurrently --raw 'yarn run watch' 'yarn run serve'",
    "clean": "rm -rf node_modules yarn-error.log static/css static/js *.log",
    "lint-scss": "stylelint static/**/*.scss"
  },
  "dependencies": {
    "@canonical/cookie-policy": "3.8.4",
    "@canonical/global-nav": "3.6.2",
    "autoprefixer": "^10.4.22",
    "postcss": "8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.95.1",
    "vanilla-framework": "4.6.0"
  },
  "devDependencies": {
    "concurrently": "7.6.0",
    "stylelint": "14.16.1",
    "stylelint-config-standard-scss": "6.1.0",
    "stylelint-order": "6.0.4",
    "watch-cli": "0.2.3"
  }
}
